<div data-controller="dialog">
  <%= button_tag "Show dialog", class: "btn", "data-action": "dialog#showModal" %>

  <dialog data-dialog-target="box" data-action="click->dialog#closeOnClickOutside" class="dialog" style="--dialog-width: 430px;">
    <%= button_to_close_dialog class: "btn btn--plain p-0 dialog__close" do %>
      <%= image_tag "x.svg", aria: { hidden: "true" }, size: 16 %>
      <%= tag.span "Close", class: "sr-only" %>
    <% end %>

    <%= form_with url: nil, class: "flex flex-col gap-lg" do |form| %>
      <div class="flex flex-col gap-sm">
        <h1 class="text-lg leading-none font-semibold">Edit profile</h1>
        <p class="text-sm text-subtle">Make changes to your profile here. Click save when you're done.</p>
      </div>

      <div class="flex flex-col mb-4 gap">
        <div class="flex items-center gap-sm">
          <%= form.label :name, class: "text-sm font-medium text-end min-w-0", style: "inline-size: 25%;" %>
          <%= form.text_field :name, value: "LÃ¡zaro Nixon", class: "input" %>
        </div>

        <div class="flex items-center gap-sm">
          <%= form.label :username, class: "text-sm font-medium text-end min-w-0", style: "inline-size: 25%;" %>
          <%= form.text_field :username, value: "@lazaronixon", class: "input" %>
        </div>
      </div>

      <div class="flex items-center justify-end">
        <%= form.submit "Save changes", class: "btn" %>
      </div>
    <% end %>
  </dialog>
</div>