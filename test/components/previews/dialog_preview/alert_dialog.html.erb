<div data-controller="dialog">
  <%= button_tag "Show dialog", class: "btn", "data-action": "dialog#showModal" %>

  <dialog data-dialog-target="box" class="dialog" role="alertdialog" aria-labelledby="dialog_label" aria-describedby="dialog_desc">
    <h1 id="dialog_label" class="text-lg font-semibold">Are you absolutely sure?</h1>
    <p id="dialog_desc" class="text-sm text-subtle mbs-2">
      This action cannot be undone. This will permanently delete your account and remove your data from our servers.
    </p>

    <div class="flex justify-end gap-sm mbs-4">
      <%= button_to_close_dialog "Cancel", class: "btn btn--outline" %>
      <%= button_tag "Continue", class: "btn btn--primary" %>
    </div>
  </dialog>
</div>