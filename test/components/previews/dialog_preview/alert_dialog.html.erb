<button type="button" class="btn" commandfor="alert_dialog" command="show-modal">Show dialog</button>

<dialog id="alert_dialog" class="dialog" role="alertdialog" aria-labelledby="dialog_label" aria-describedby="dialog_desc">
  <div class="dialog__content">
    <h2 class="text-lg font-semibold leading-none mbe-2" id="dialog_label">Are you absolutely sure?</h2>
    <p class="text-sm text-subtle mbe-4" id="dialog_desc">
      This action cannot be undone. This will permanently delete your account and remove your data from our servers.
    </p>

    <div class="flex items-center justify-end gap">
      <button type="button" class="btn" commandfor="alert_dialog" command="close">Cancel</button>
      <button type="button" class="btn btn--primary">Continue</button>
    </div>
  </div>
</dialog>
