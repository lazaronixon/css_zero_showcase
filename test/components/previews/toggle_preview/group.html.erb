<%= label_tag :check_bold, class: "toggle" do %>
  <%= check_box_tag :check_bold %>
  <%= tag.span nil,  class: "btn btn--plain" do %>
    <%= image_tag "bold.svg", size: 16, role: "presentation" %>
    <%= tag.span "Toggle bold", class: "sr-only" %>
  <% end %>
<% end %>

