<div data-controller="dialog">
  <button class="btn" data-action="dialog#showModal">Open sheet</button>

  <dialog class="sheet sheet--right" data-dialog-target="box" data-action="click->dialog#closeOnClickOutside">
    <div class="sheet__content">
      <button class="btn btn--plain p-0 sheet__close" data-action="click->dialog#close">
        <%= image_tag "x.svg", size: 16, "aria-hidden": "true" %>
        <span class="sr-only">Close</span>
      </button>

      <%= form_with url: nil, class: "flex flex-col gap" do |form| %>
        <div class="flex flex-col gap-half">
          <h1 class="text-lg font-semibold leading-none">Edit profile</h1>
          <p class="text-sm text-subtle">Make changes to your profile here. Click save when you're done.</p>
        </div>

        <div class="flex flex-col gap mb-2">
          <div class="flex items-center gap">
            <%= form.label :name, class: "text-sm font-medium leading-none text-end min-w-0", style: "inline-size: 25%;" %>
            <%= form.text_field :name, value: "LÃ¡zaro Nixon", class: "input" %>
          </div>

          <div class="flex items-center gap">
            <%= form.label :username, class: "text-sm font-medium leading-none text-end min-w-0", style: "inline-size: 25%;" %>
            <%= form.text_field :username, value: "@lazaronixon", class: "input" %>
          </div>
        </div>

        <div class="flex items-center justify-end">
          <%= form.submit "Save changes", class: "btn" %>
        </div>
      <% end %>
    </div>
  </dialog>
</div>
