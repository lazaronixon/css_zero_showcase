<div contents data-controller="popover" data-popover-placement-value="bottom-start">
  <button type="button" id="menu_button" class="btn" data-popover-target="trigger" popovertarget="popover" aria-haspopup="true" aria-controls="menu">
    Open
  </button>

  <div popover id="popover" class="popover" style="--popover-size: 14rem;" data-popover-target="content">
    <div id="menu" class="menu" data-controller="menu" data-action="keydown->menu#navigate" role="menu" aria-labelledby="menu_button">
      <%= render partial: "menu_items" %>
    </div>
  </div>
</div>
