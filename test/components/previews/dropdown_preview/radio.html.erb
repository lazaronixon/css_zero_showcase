<div contents data-controller="popover" data-popover-placement-value="bottom-start">
  <button type="button" class="btn" data-popover-target="trigger" popovertarget="popover" aria-haspopup="true">
    Open
  </button>

  <div popover id="popover" class="popover" style="--popover-size: 14rem;" data-popover-target="content">
    <div class="menu" data-controller="menu" data-action="keydown->menu#navigate" role="menu" aria-label="Menu">
      <div class="menu__header">Settings</div>
      <hr class="menu__separator" role="separator"/>
      <div class="btn menu__item">
        <%= radio_button_tag :setting, :recents, 1, class: "radio", data: { menu_target: "item" }, role: "menuitemradio" %>
        <%= label_tag :setting_recents, "Recents", class: "grow text-sm" %>
      </div>
      <div class="btn menu__item">
        <%= radio_button_tag :setting, :home, class: "radio", data: { menu_target: "item" }, role: "menuitemradio" %>
        <%= label_tag :setting_home, "Home", class: "grow text-sm" %>
      </div>
      <div class="btn menu__item">
        <%= radio_button_tag :setting, :applications, class: "radio", data: { menu_target: "item" }, role: "menuitemradio" %>
        <%= label_tag :setting_applications, "Applications", class: "grow text-sm" %>
      </div>
      <div class="btn menu__item">
        <%= radio_button_tag :setting, :desktop, class: "radio", data: { menu_target: "item" }, role: "menuitemradio" %>
        <%= label_tag :setting_desktop, "Desktop", class: "grow text-sm" %>
      </div>
    </div>
  </div>
</div>
