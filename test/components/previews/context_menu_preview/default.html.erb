<div data-controller="context-menu">
  <div class="card text-sm flex items-center justify-center" style="block-size: 150px; inline-size: 300px;" data-action="contextmenu->context-menu#show:prevent">
    Right click here
  </div>

  <div popover class="popover" style="--popover-size: 14rem;" data-controller="menu" data-context-menu-target="menu" data-action="toggle->menu#reset keydown.up->menu#prev keydown.down->menu#next">
    <div class="menu" role="menu">
      <div class="menu__header">Menu</div>
      <hr class="menu__separator" role="separator"/>
      <div class="menu__group" role="group">
        <%= link_to "", class: "btn menu__item", data: { menu_target: "item" }, role: "menuitem", autofocus: true do %>
          <%= image_tag "calendar.svg", size: 14, aria: { hidden: true } %>
          <span>Calendar</span>
        <% end %>
        <%= button_to "", class: "btn menu__item", form: { contents: true, role: "menuitem" }, data: { menu_target: "item" } do %>
          <%= image_tag "smile.svg", size: 14, aria: { hidden: true } %>
          <span>Seach Emoji</span>
        <% end %>
        <%= tag.a class: "btn menu__item", role: "menuitem", tabindex: "-1", aria: { disabled: true } do %>
          <%= image_tag "calculator.svg", size: 14, aria: { hidden: true } %>
          <span>Calculator</span>
        <% end %>
      </div>
      <hr class="menu__separator" role="separator"/>
      <div class="menu__group" role="group">
        <%= link_to "", class: "btn menu__item", data: { menu_target: "item" }, role: "menuitem" do %>
          <%= image_tag "user.svg", size: 14, aria: { hidden: true } %>
          <span>Profile</span>
          <span class="menu__item-key">⌘P</span>
        <% end %>
        <%= link_to "", class: "btn menu__item", data: { menu_target: "item" }, role: "menuitem" do %>
          <%= image_tag "credit-card.svg", size: 14, aria: { hidden: true } %>
          <span>Billing</span>
          <span class="menu__item-key">⌘B</span>
        <% end %>
        <%= link_to "", class: "btn menu__item", data: { menu_target: "item" }, role: "menuitem" do %>
          <%= image_tag "settings.svg", size: 14, aria: { hidden: true } %>
          <span>Settings</span>
          <span class="menu__item-key">⌘P</span>
        <% end %>
      </div>
    </div>
  </div>
</div>