<div class="command" style="max-inline-size: 450px" data-controller="filter" data-filter-active-class="command__list--filtering" data-filter-selected-class="selected">
  <label class="command__input input input--actor flex items-center gap">
    <%= image_tag "search.svg", size: 16, aria: { hidden: true } %>
    <%= tag.input type: "search", id: "search", data: { action: "input->filter#filter" }, autocomplete: "off", placeholder: "Filter..." %>
  </label>
  <div class="command__list" data-filter-target="list">
    <div class="command__empty">Not results found.</div>
    <%= render "command_options" %>
  </div>
</div>