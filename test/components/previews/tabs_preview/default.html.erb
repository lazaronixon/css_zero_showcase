<div class="flex flex-col gap" style="max-inline-size: 400px" data-controller="tabs">
  <div class="tabs__list" data-action="keydown.left->tabs#prev keydown.right->tabs#next" role="tablist" tabindex="0">
    <button id="trigger_account" class="btn btn--tab" data-tabs-target="button" data-action="tabs#select" data-tabs-index-param="0" role="tab" aria-controls="tab_account" tabindex="-1">Account</button>
    <button id="trigger_password" class="btn btn--tab" data-tabs-target="button" data-action="tabs#select" data-tabs-index-param="1" role="tab" aria-controls="tab_password" tabindex="-1">Password</button>
  </div>

  <div id="tab_account" data-tabs-target="tab" role="tabpanel" aria-labelledby="trigger_account">
    <%= render "account_form" %>
  </div>

  <div id="tab_password" data-tabs-target="tab" role="tabpanel" aria-labelledby="trigger_password" hidden>
    <%= render "password_form" %>
  </div>
</div>