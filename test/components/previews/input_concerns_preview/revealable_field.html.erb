<label data-controller="reveal-button" class="input input--actor flex items-center gap">
  <%= password_field_tag "revealable_field", nil, class: "input__character", data: { reveal_button_target: "input" } %>
  <%= button_tag class: "btn btn--plain p-0", data: { action: "reveal-button#reveal" } do %>
    <%= image_tag "eye.svg", size: 20, role: "presentation" %>
    <span class="sr-only">Reveal password</span>
  <% end %>
</label>