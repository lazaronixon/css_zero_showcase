<%= turbo_stream.replace :state_id do %>
  <%= select_tag :state_id, options_from_collection_for_select(@states, :id, :name), include_blank: "Select one", class: "input", data: { action: "form#submit", form_submitter_param: "#state_changed" } %>
<% end %>

<%= turbo_stream.replace :citizen_city_id do %>
  <%= select_tag field_id(:citizen, :city_id), nil, name: field_name(:citizen, :city_id), include_blank: "Select one", class: "input" %>
<% end %>
