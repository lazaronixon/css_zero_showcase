    <span class="command__item-key">⌘P</span>
  <% end %>
  <%= link_to "", class: "btn command__item", data: { value: "billing" }, role: "option" do %>
    <%= image_tag "credit-card.svg", size: 14, aria: { hidden: true } %>
    <span>Billing</span>
    <span class="command__item-key">⌘B</span>
  <% end %>
  <%= link_to "", class: "btn command__item", data: { value: "settings" }, role: "option" do %>
    <%= image_tag "settings.svg", size: 14, aria: { hidden: true } %>
    <span>Settings</span>
    <span class="command__item-key">⌘P</span>
  <% end %>
</div>