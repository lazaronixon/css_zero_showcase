<div class="command__group" role="group" aria-labelledby="suggestions">
  <span class="command__group-header" id="suggestions" aria-hidden="true">Suggestions</span>
  <%= link_to "", class: "btn command__item", data: { value: "calendar" }, role: "option" do %>
    <%= image_tag "calendar.svg", size: 14, aria: { hidden: true } %>
    <span>Calendar</span>
  <% end %>
  <%= link_to "", class: "btn command__item", data: { value: "search emoji" }, role: "option" do %>
    <%= image_tag "smile.svg", size: 14, aria: { hidden: true } %>
    <span>Seach Emoji</span>
  <% end %>
  <%= tag.a class: "btn command__item", data: { value: "calculator" }, aria: { disabled: true }, role: "option" do %>
    <%= image_tag "calculator.svg", size: 14, aria: { hidden: true } %>
    <span>Calculator</span>
  <% end %>
</div>
<div class="command__group" role="group" aria-labelledby="settings">
