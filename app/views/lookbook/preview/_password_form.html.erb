<%= form_with url: nil, class: "card flex flex-col gap" do |form| %>
  <div class="flex flex-col">
    <h3 class="font-semibold leading-none mbe-1">Password</h3>
    <p class="text-sm text-subtle">Change your password here. After saving, you'll be logged out.</p>
  </div>

  <div class="flex flex-col gap mb-2">
    <div class="flex flex-col gap-half">
      <%= form.label :current_password, class: "text-sm font-medium leading-none" %>
      <%= form.password_field :current_password, class: "input" %>
    </div>

    <div class="flex flex-col gap-half">
      <%= form.label :new_password, class: "text-sm font-medium leading-none" %>
      <%= form.password_field :new_password, class: "input" %>
    </div>
  </div>

  <div class="flex items-center">
    <%= form.submit "Save password", class: "btn btn--primary" %>
  </div>
<% end %>