<%= form_with url: nil, class: "flex flex-col gap" do |form| %>
  <div class="flex flex-col gap-sm mbe-2">
    <h3 class="text-2xl font-semibold leading-none">Password</h3>
    <p class="text-sm text-subtle">Change your password here. After saving, you'll be logged out.</p>
  </div>

  <div class="flex flex-col gap mbe-2">
    <div class="flex flex-col gap-sm">
      <%= form.label :current_password, class: "text-sm font-medium" %>
      <%= form.password_field :current_password, class: "input" %>
    </div>

    <div class="flex flex-col gap-sm">
      <%= form.label :new_password, class: "text-sm font-medium" %>
      <%= form.password_field :new_password, class: "input" %>
    </div>
  </div>

  <div class="flex items-center">
    <%= form.submit "Save password", class: "btn" %>
  </div>
<% end %>