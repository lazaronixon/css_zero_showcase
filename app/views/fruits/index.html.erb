<% content_for :head do %>
  <%= turbo_refreshes_with(method: :morph, scroll: :preserve) %>
<% end %>

<div class="flex flex-col gap mbs-4 mi-auto" style="max-inline-size: 400px;">
  <div class="flex flex-col gap relative" data-controller="autoanimate">
    <% @fruits.each do |fruit| %>
      <%= tag.div id: dom_id(fruit), class: "flex items-center justify-between rounded border p-3" do %>
        <div><%= fruit.description %></div>
        <div><%= button_to "❌", main_app.fruit_path(fruit), method: :delete, class: "btn btn--plain" %></div>
      <% end %>
    <% end %>
  </div>

  <div class="flex items-center gap">
    <%= button_to "+ Add Fruit", main_app.fruits_path, class: "btn" %>
  </div>
</div>
